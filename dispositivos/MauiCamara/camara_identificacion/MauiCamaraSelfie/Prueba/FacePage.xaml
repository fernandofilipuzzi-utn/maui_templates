<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prueba.FacePage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:Prueba"
             Title="FacePage">
    <VerticalStackLayout>
        <Grid>

            <toolkit:CameraView x:Name="MyCamera"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" MediaCaptured="MyCamera_MediaCaptured" />

            <!--<local:TransparentCircleView WidthRequest="300"  HeightRequest="300" HorizontalOptions="Center" VerticalOptions="Center" />-->

            <Image   Source="mascara.png" HorizontalOptions="Fill"  VerticalOptions="Fill" />

        </Grid>
        <Button Text="Confirmar" Clicked="Button_Clicked" />
    </VerticalStackLayout>
</ContentPage>