<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSimple4.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <WebView x:Name="Navegador" Navigating="Navegador_Navigating" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ></WebView>


            <Button  x:Name="btnTakeFoto"
       Text="Click me" 
       SemanticProperties.Hint="Tomar foto"
       Clicked="btnTakeFoto_Clicked"
       HorizontalOptions="Fill" />
            
            <Image x:Name="myImage" BackgroundColor="Gray" WidthRequest="300" HeightRequest="300" HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
